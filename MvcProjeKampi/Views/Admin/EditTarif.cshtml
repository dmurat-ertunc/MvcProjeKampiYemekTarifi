@model EntityLayer.Concrete.Tarifler

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Tarif Güncelle</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/templatemo-xtra-blog.css" rel="stylesheet">
    <script src="/js/jquery.min.js/web"></script>
    <script src="/js/responsiveslides.min.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="/vendors/feather/feather.css">
    <link rel="stylesheet" href="/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="/img/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="/img/logo.svg" alt="logo">
                            </div>
                            <h4>Tarif Güncelle</h4>
                            @*@if (ViewBag.ms != null)
                            {
                                <div class="alert alert-info" role="alert">
                                    @ViewBag.ms
                                </div>
                            }
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly" role="alert">
                            </div>*@
                            <form asp-controller="Admin" asp-action="EditTarif" method="post">
                                <div class="user-details">
                                    <div class="form-group">
                                        <span class="details">Yemek Adı</span>
                                        <input type="text" name="TarifAd" class="form-control" value="@Model.TarifAd"  required />
                                    </div>
                                    <div class="form-group">
                                        <span class="details">Açıklama</span>
                                        <input type="text" name="Aciklama" class="form-control" value="@Model.Aciklama" required />
                                    </div>
                                    <div class="form-group">
                                        <span class="details">Tarif</span>
                                        <input type="text" name="Tarif" class="form-control" value="@Model.Tarif" required />
                                    </div>
                                    <div class="form-group">
                                        <span class="details">Foto Url</span>
                                        <input type="text" name="Foto" class="form-control" value="@Model.Foto" required />
                                    </div>
                                </div>
                                <div class="gender-details">
                                    <button type="submit" class="btn btn-danger">Güncelle</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
